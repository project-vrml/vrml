<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>com.kevinten</groupId>
    <artifactId>vrml</artifactId>
    <packaging>pom</packaging>
    <version>1.0.1-RELEASE</version>

    <name>vrml</name>
    <description>Vrml is a useful api library for java work.</description>
    <url>http://www.kevinten.com/</url>

    <licenses>
        <license>
            <name>The Apache Software License, Version 2.0</name>
            <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
        </license>
    </licenses>

    <developers>
        <developer>
            <name>kevinten10</name>
            <email>596823919@qq.com</email>
        </developer>
    </developers>

    <scm>
        <connection>scm:git:git@github.com:kevinten10/vrml.git</connection>
        <developerConnection>scm:git:git@github.com:kevinten10/vrml.git</developerConnection>
        <url>git@github.com:kevinten10/vrml.git</url>
    </scm>

    <distributionManagement>
        <snapshotRepository>
            <id>ossrh</id>
            <url>https://oss.sonatype.org/content/repositories/snapshots</url>
        </snapshotRepository>
        <repository>
            <id>ossrh</id>
            <url>https://oss.sonatype.org/service/local/staging/deploy/maven2/</url>
        </repository>
    </distributionManagement>

    <modules>
        <module>vrml-alert</module>
        <module>vrml-all</module>
        <module>vrml-api</module>
        <module>vrml-compute</module>
        <module>vrml-core</module>
        <module>vrml-data</module>
        <module>vrml-error</module>
        <module>vrml-eventbus</module>
        <module>vrml-external</module>
        <module>vrml-log</module>
        <module>vrml-metric</module>
        <module>vrml-request</module>
        <module>vrml-switch</module>
        <module>vrml-time</module>
        <module>vrml-trace</module>
    </modules>

    <properties>
        <java.version>8</java.version>
        <file.encoding>UTF-8</file.encoding>
        <maven.version>3.8.1</maven.version>
        <lombok.version>1.18.12</lombok.version>
        <common.version>3.10</common.version>
        <vavr.version>0.10.2</vavr.version>
        <gson.version>2.8.0</gson.version>
        <guava.version>29.0-jre</guava.version>
        <springboot.version>2.2.0.RELEASE</springboot.version>
        <spring.version>5.2.0.RELEASE</spring.version>
        <jcip.version>1.0</jcip.version>
        <log4j.version>1.7.30</log4j.version>
        <junit.version>4.13.1</junit.version>
        <logback.version>1.2.3</logback.version>
        <jmockito.version>1.49</jmockito.version>
        <caffeine.version>2.8.1</caffeine.version>
        <maven-surefire-plugin.version>2.22.2</maven-surefire-plugin.version>
    </properties>

    <dependencies>
        <!-- vavr -->
        <dependency>
            <groupId>io.vavr</groupId>
            <artifactId>vavr</artifactId>
            <version>${vavr.version}</version>
            <optional>true</optional>
        </dependency>

        <!-- tool -->
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <version>${lombok.version}</version>
            <optional>true</optional>
        </dependency>

        <!-- json -->
        <dependency>
            <groupId>com.google.code.gson</groupId>
            <artifactId>gson</artifactId>
            <version>${gson.version}</version>
            <optional>true</optional>
        </dependency>
    </dependencies>

    <dependencyManagement>
        <dependencies>
            <!-- module -->
            <dependency>
                <groupId>com.kevinten</groupId>
                <artifactId>vrml-alert</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.kevinten</groupId>
                <artifactId>vrml-all</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.kevinten</groupId>
                <artifactId>vrml-api</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.kevinten</groupId>
                <artifactId>vrml-compute</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.kevinten</groupId>
                <artifactId>vrml-core</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.kevinten</groupId>
                <artifactId>vrml-data</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.kevinten</groupId>
                <artifactId>vrml-error</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.kevinten</groupId>
                <artifactId>vrml-eventbus</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.kevinten</groupId>
                <artifactId>vrml-external</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.kevinten</groupId>
                <artifactId>vrml-log</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.kevinten</groupId>
                <artifactId>vrml-metric</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.kevinten</groupId>
                <artifactId>vrml-request</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.kevinten</groupId>
                <artifactId>vrml-switch</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.kevinten</groupId>
                <artifactId>vrml-time</artifactId>
                <version>${project.version}</version>
            </dependency>
            <dependency>
                <groupId>com.kevinten</groupId>
                <artifactId>vrml-trace</artifactId>
                <version>${project.version}</version>
            </dependency>

            <!-- lang3 -->
            <dependency>
                <groupId>org.apache.commons</groupId>
                <artifactId>commons-lang3</artifactId>
                <version>${common.version}</version>
                <optional>true</optional>
            </dependency>
            <!-- guava -->
            <dependency>
                <groupId>com.google.guava</groupId>
                <artifactId>guava</artifactId>
                <version>${guava.version}</version>
                <optional>true</optional>
            </dependency>
            <!-- jcip -->
            <dependency>
                <groupId>net.jcip</groupId>
                <artifactId>jcip-annotations</artifactId>
                <version>${jcip.version}</version>
                <optional>true</optional>
            </dependency>
            <!-- spring -->
            <dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-starter</artifactId>
                <version>${springboot.version}</version>
                <optional>true</optional>
            </dependency>
            <!-- spring test -->
            <dependency>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-starter-test</artifactId>
                <version>${springboot.version}</version>
                <scope>test</scope>
                <optional>true</optional>
            </dependency>
            <!-- test -->
            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>${junit.version}</version>
                <scope>test</scope>
            </dependency>
            <dependency>
                <groupId>org.jmockit</groupId>
                <artifactId>jmockit</artifactId>
                <version>${jmockito.version}</version>
                <scope>test</scope>
            </dependency>
            <!-- log -->
            <dependency>
                <groupId>org.slf4j</groupId>
                <artifactId>slf4j-api</artifactId>
                <version>${log4j.version}</version>
                <optional>true</optional>
            </dependency>
            <dependency>
                <groupId>ch.qos.logback</groupId>
                <artifactId>logback-core</artifactId>
                <version>${logback.version}</version>
                <optional>true</optional>
            </dependency>
            <dependency>
                <groupId>ch.qos.logback</groupId>
                <artifactId>logback-access</artifactId>
                <version>${logback.version}</version>
                <optional>true</optional>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${maven.version}</version>
                <configuration>
                    <source>${java.version}</source>
                    <target>${java.version}</target>
                    <encoding>${file.encoding}</encoding>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.springframework.boot</groupId>
                <artifactId>spring-boot-maven-plugin</artifactId>
                <version>${springboot.version}</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <version>3.2.1</version>
                <executions>
                    <execution>
                        <id>attach-sources</id>
                        <goals>
                            <goal>jar-no-fork</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>3.2.0</version>
                <executions>
                    <execution>
                        <id>attach-javadocs</id>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-gpg-plugin</artifactId>
                <version>1.6</version>
                <executions>
                    <execution>
                        <id>sign-artifacts</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>sign</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.sonatype.plugins</groupId>
                <artifactId>nexus-staging-maven-plugin</artifactId>
                <version>1.6.7</version>
                <extensions>true</extensions>
                <configuration>
                    <serverId>ossrh</serverId>
                    <nexusUrl>https://oss.sonatype.org/</nexusUrl>
                    <autoReleaseAfterClose>true</autoReleaseAfterClose>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>